<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layoutDirection="ltr"
    android:id="@+id/new_book_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="8dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/add_new_book_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:text="Add a New Book"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@+id/book_name_input"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/book_name_input"
            android:layout_width="307dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:hint="Book Name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_new_book_title" />

        <EditText
            android:id="@+id/book_author_input"
            android:layout_width="307dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:hint="Author"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/book_name_input" />


        <Spinner
            android:id="@+id/book_type_spinner"
            android:layout_width="195dp"
            android:layout_height="44dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="40dp"
            android:spinnerMode="dropdown"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.8"
            app:layout_constraintStart_toEndOf="@+id/book_genre_title"
            app:layout_constraintTop_toBottomOf="@+id/book_author_input" />

        <TextView
            android:id="@+id/book_genre_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book Genre"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/book_description_input"
            app:layout_constraintStart_toStartOf="@+id/book_author_input"
            app:layout_constraintTop_toBottomOf="@+id/book_author_input" />

        <EditText
            android:id="@+id/book_description_input"
            android:layout_width="307dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@drawable/rectanglez"
            android:gravity="top"
            android:hint=" Description"
            android:inputType="textMultiLine"
            android:lines="5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/book_type_spinner" />

        <TextView
            android:id="@+id/book_pictures_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="Book Pictures"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/book_description_input"
            app:layout_constraintTop_toBottomOf="@+id/book_description_input" />

        <ScrollView
            android:id="@+id/book_pictures_scroll"
            android:layout_width="316dp"
            android:layout_height="182dp"
            android:layout_marginTop="28dp"
            android:background="@android:color/transparent"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_image_btn">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/pictures_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="133dp"
                    android:layout_height="182dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    app:srcCompat="@drawable/book1" />
            </android.support.constraint.ConstraintLayout>
        </ScrollView>

        <Button
            android:id="@+id/add_image_btn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="71dp"
            android:layout_height="47dp"
            android:layout_marginTop="36dp"
            android:background="@android:color/transparent"
            android:text="+"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="@+id/book_description_input"
            app:layout_constraintTop_toBottomOf="@+id/book_description_input" />


        <EditText
            android:id="@+id/choose_location_edit_text"
            android:layout_width="217dp"
            android:layout_height="38dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="22dp"
            android:ems="10"
            android:hint="My current location"
            android:inputType="textPersonName"
            android:textColor="#000000"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.204"
            app:layout_constraintStart_toEndOf="@+id/location_title"
            app:layout_constraintTop_toBottomOf="@id/book_pictures_scroll"
            tools:layout_constraintTop_toBottomOf="@id/book_pictures_scroll" />


        <TextView
            android:id="@+id/location_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Location"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="@+id/book_pictures_title"
            app:layout_constraintTop_toBottomOf="@id/book_pictures_scroll" />

        <TextView
            android:id="@+id/radio_grp_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="I want to:"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="@+id/book_pictures_title"
            app:layout_constraintTop_toBottomOf="@id/location_title" />

        <RadioGroup
            android:id="@+id/radio_grp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="@+id/choose_location_edit_text"
            app:layout_constraintTop_toBottomOf="@+id/radio_grp_title">

            <RadioButton
                android:id="@+id/exchange_radio_btn"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Exchange books"
                android:textColor="#000000" />

            <RadioButton
                android:id="@+id/leave_book_radio_btn"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Leave the book there"
                android:textColor="#000000"
                tools:layout_editor_absoluteY="7dp" />
        </RadioGroup>

        <Button
            android:id="@+id/finish_adding_book_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:text="Add Book!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/book_pictures_scroll"
            app:layout_constraintTop_toBottomOf="@+id/radio_grp" />


    </android.support.constraint.ConstraintLayout>


</ScrollView>
